@model IEnumerable<Subject>
@using SlavChanAPP.Models;
@{
    
    var  firstBoard = Model.First();
    ViewData["Title"] = "/ " + firstBoard.Board.Shortcut + " /";
    
}




<!--Navbar-->
<nav class="navbar navbar-expand-lg">
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mx-auto text-center">
            <li class="nav-item">
                <a class="nav-link text-danger mx-2">[</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-danger mx-2" href="#"> @Html.ActionLink("ABC", "Thread", "Home", new {boardId = 1}) </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-danger mx-2" href="#"> @Html.ActionLink("XYZ", "Thread", "Home", new {boardId = 2}) </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-danger mx-2">]</a>
            </li>
        </ul>
    </div>
</nav>


<!--Wstęp-->
<div class="text-center mb-4">
    @{
        <h2> @firstBoard.Board.Name </h2>
    }
    <a class="btn btn-primary">
        Stwórz nowy wątek
    </a>
</div>

<!--Formularz do tworzenia nowych threadów-->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @using (Html.BeginForm("CreateThread", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                
                <div class="form-group">
                    <label for="Name">Name:</label>
                    <input type="text" name="Name" class="form-control" placeholder="Name" required />
                </div>

                <div class="form-group">
                    <label for="UserName">User Name:</label>
                    <input type="text" name="UserName" class="form-control" placeholder="User Name" required />
                </div>

                <div class="form-group">
                    <label for="Content">Content:</label>
                    <textarea name="Content" class="form-control" placeholder="Content" required></textarea>
                </div>

                <div class="form-group">
                    <label for="Image">Image:</label>
                    <input type="file" name="Image" class="form-control" />
                </div>

                <input type="hidden" name="BoardId" value="@firstBoard.Board.Id">

                <button type="submit" class="btn btn-primary">Create Thread</button>
            }
        </div>
    </div>
</div>


<!--Wszystkie Thready-->
<div id="all" class="text-center d-flex flex-wrap justify-content-around">
    @foreach (var a in Model)
    {
        <div class="card m-3" style="width: 18rem;">
            <img src="data:image/png;base64,@a.Image" alt="Plik" />
            <img src="dupa" class="card-img-top" alt="Obrazek">
            <div class="card-body">
                <h5 class="card-title">@a.Name</h5>
            </div>
        </div>
    }
</div>